{% extends 'base.html.twig' %}

{% block title %}Cart
{% endblock %}

{% block body %}
    <a href="{{ path('cart_index') }}">Retourner au panier</a>
    <div class="row ">

        <div class="col s8  ">
            <h4 class="section-title">Informations contact</h4>
            {{form_start (formClient)}}
            <div class="col s6 ">
                {{form_errors (formClient.firstName)}}
                {{form_row (formClient.firstName,{'label': 'Prénom','attr' :{'placeholder' : 'Ex : Noël'} })}}
            </div>
            <div class="col s6">
                {{form_errors (formClient.lastName)}}
                {{form_row (formClient.lastName,{'label': 'Nom','attr' :{'placeholder' : ' Ex : Flantier'} })}}
            </div>

            {% if app.user %}
                <div class="col s8">
                    {{form_errors (formClient.email)}}
                    {{form_row (formClient.email,{'label': 'Adresse mail','value' : app.user.email,'attr' :{'placeholder' : ' Ex : noelflantier@exemple.com'} })}}
                </div>
            {% else %}
                <div class="col s8">
                    {{form_errors (formClient.email)}}
                    {{form_row (formClient.email,{'label': 'Adresse mail','attr' :{'placeholder' : ' Ex : noelflantier@exemple.com'} })}}
                </div>

            {% endif %}

            <div class="col s4">
                {{form_errors (formClient.phone)}}
                {{form_row (formClient.phone,{'label': 'Numéro de téléphone','attr' :{'placeholder' : ' Ex : 0600000000'} })}}
            </div>

            <h4 class="section-title">Addresse de livraison</h4>

            <div class="col s12 ">
                {{form_errors (formClient.adress)}}
                {{form_row (formClient.adress,{'label': 'Adresse','attr' :{'placeholder' : ' Ex : 5 rue René Coty'} })}}
            </div>

            <div class="col s12 ">
                {{form_errors (formClient.adressComplement)}}
                {{form_row (formClient.adressComplement,{'label': 'Complément d\'adresse','attr' :{'placeholder' : ' Ex : 3ème étage'} })}}
            </div>
            <div class="col s12 ">
                {{form_errors (formClient.city)}}
                {{form_row (formClient.city,{'label': 'Ville','attr' :{'placeholder' : ' Ex : Saint-Etienne'} })}}
            </div>
            
            <div class="col s6 ">
                {{form_errors (formClient.country)}}
                {{form_row (formClient.country,{'label': 'Pays','attr' :{'placeholder' : 'Ex : France'} })}}
            </div>
            <div class="col s6">
                {{form_errors (formClient.zipCode)}}
                {{form_row (formClient.zipCode,{'label': 'Code postal','attr' :{'placeholder' : ' Ex : 42000'} })}}
            </div>



            
        </div>

        <div class="col s4  summary-cart">
            <h5 class="section-title center-align">Résumé de la commande</h5>

            <div class="col s8 ">
                <p>Nombre d'article</p>
            </div>
            <div class="col s4  quantity-summury-cart">
                <p>{{cart.orderProducts | length }}</p>
        </div>
        <div class="col s8 ">
            <p>Prix total des articles</p>
        </div>
        <div class="col s4  quantity-summury-cart">
            <p>{{cart.totalAmount}}
                €</p>
        </div>
        <div class="col s8 ">
            <p>Prix de la livraison</p>
        </div>
        <div class="col s4  quantity-summury-cart">
            <p>0 €</p>
        </div>


        <div class="col s8 ">
            <p>Prix de la livraison</p>
        </div>
        <div class="col s4  quantity-summury-cart">
            <p>1 €</p>
        </div>

        <div class="col s8 total-summary-cart ">
            <p class="text-total-summary-cart">Montant total</p>
        </div>
        <div class="col s4  quantity-summury-cart">
            <p class="text-total-summary-cart">{{cart.totalAmount}}
                €</p>
        </div>
        <p class="detail-vat-summary-cart">Les prix sont indiqués avec la TVA comprise.</p>


    </div>
    <div class="col s12 yellow">
        MODULE DE PAIMENT STRIPE
        <div class="center-align">

            <button type="submit" class="waves-effect waves-light btn-large btn-add-cart">
                Paiement</button>

        </div>
    </div>
    {{form_end (formClient)}}


</div>{% endblock %}
