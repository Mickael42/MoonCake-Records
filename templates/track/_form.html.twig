{{ form_start(form) }}


<div class="form-input-container">

    {{form_label (form.vinyl, 'Choisir le vinyle')}}
    <div class="form-error">
        {{form_errors (form.vinyl)}}
    </div>
    {{form_widget (form.vinyl)}}


    {{form_label (form.name, 'Nom du titre')}}
    <div class="form-error">
        {{form_errors (form.name)}}
    </div>
    {{form_widget (form.name)}}

    {{form_label (form.position, 'Position du titre dans le vinyle')}}
    <div class="form-error">
        {{form_errors (form.position)}}
    </div>
    {{form_widget (form.position)}}


    {{form_label (form.duration, 'Dur√©e du morceau')}}
