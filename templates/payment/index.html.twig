{% extends 'base.html.twig' %}

{% block title %}Hello PaymentController!
{% endblock %}

{% block body %}


    <div class="row">
        <h1 class="section-title">Paiement</h1>

        <div class="col s6 offset-s3 grey lighten-3">

            <form action="" method="post" id="payment-form">
                <div class="form-row">
                    <h4 class="center-align">Information cartes bancaires</h4>
                    {% for message in app.flashes('error') %}
                        <div class="card-panel">
                            <span class="red-text ">{{ message }}</span>
                        </div>
                    {% endfor %}
                    <input id="cardholder-name" type="text" placeholder="Nom du propriétaire de la carte">
                    <div
                        id="card-element"><!-- A Stripe Element will be inserted here. -->
                    </div>

                    <!-- Used to display form errors. -->
                    <div id="card-errors" role="alert"></div>
                </div>

                <div class="center-align">
                    <button id="card-button" class="btn btn-payment" data-secret="{{clientPayment}}">
                        Paiement
                    </button>
                </div>

                <p>J'accepte les
                    <a href="" target="_blank">conditions générales de vente</a>
                </p>
                <div class="center-align">
                    <img alt="Stripe protège vos achats" class="responsive-img monetico" src="{{ asset ('assets/img/paiement-securise-stripe.jpeg')}}">


                </div>
            </form>

        </div>


    </div>
{% endblock %}
