            <div class="center-align">
                <a href="{{path ('vinyl_index') }}" class="button-white " data-group="all">genre</a>
            </div>
        </div>
        <div class="col s2  genre-button-container ">

            <div class="center-align">
                <a href="{{path ('vinyl_index') }}" class="button-white " data-group="all">genre</a>
            </div>
        </div>

    </div>


    <div class='row'>
        <div class="col s2 ">
            <p>{{vinyls|length}} vinyles</p>
        </div>
        <div class="col s1 ">
            <p>
                <a href="{{path ('vinyl_index') }}" class="button-black ">Filtrer</a>
            </p>
        </div>
    </div>


    <div class="row">
        {% for vinyl in vinyls %}
            <div class="col s12 m6 l3 center-align ">
                <a href="{{ path('vinyl_show', {'id': vinyl.id}) }}"><img class="cover-vinyl" src="{{ vinyl.cover }}"></a>
                <a class="link-vinyl" href="{{ path('vinyl_show', {'id': vinyl.id}) }}">
                    <div class="container-vinyl-info ">

                        <p class='artist-name'>{{ vinyl.artiste }}</p>
                        <p class='vinyl-name'>{{ vinyl.name }}</p>
                        <p class='label-and-year'>{{ vinyl.label }}
                            -
                            {{ vinyl.year }}</p>
                        {% if vinyl.reducePrice %}
                            <p class='vinyl-price'>{{ vinyl.reducePrice }}€</p>
                        {% else %}
                            <p class='vinyl-price'>{{ vinyl.regularPrice }}€</p>
                        {% endif %}

                    </div>
                </a>
            </div>
        {% else %}
            <div class="col s12 m12 l12 center-align">
                <p>Oups ! Erreur, il n'y a pas de vinyles à afficher</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
