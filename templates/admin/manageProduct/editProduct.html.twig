{% extends 'admin/base.html.twig' %}
{% block body %}

    <div class="container-fluid">

        <div class="row">
            <div class="col col-12"></div>
        </div>

        <h1 class="section-title">Liste des vinyles</h1>

        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}


        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Artiste</th>
                    <th>Ref vinyle</th>
                </tr>
            </thead>

            {% for vinyl in vinyls %}

                <tr>
                    <td>{{vinyl.name}}</td>
                    <td>{{vinyl.artiste}}</td>
                    <td>{{vinyl.id}}</td>
                    <td>
                        <a class="btn btn-admin" href={{path ('vinyl_edit', {'id': vinyl.id} )}}>Modifier</a>
                    </td>

                    <td>{{ include('vinyl/_delete_form.html.twig') }}</td>
                </tr>

            {% endfor %}


        </tbody>
    </table>
</div>{% endblock %}
