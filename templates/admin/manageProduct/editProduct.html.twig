{% extends 'admin/base.html.twig' %}
{% block body %}

    <div class="container-fluid">

        <h1 class="section-title">Supprimer un vinyle</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Artiste</th>
                    <th>Ref vinyl</th>
                </tr>
            </thead>

            {% for vinyl in vinyls %}

                <tr>
                    <td>{{vinyl.name}}</td>
                    <td>{{vinyl.artiste}}</td>
                    <td>{{vinyl.id}}</td>
                    <td>
                        <a class="btn btn-admin" href={{path ('product_edit', {'id': vinyl.id} )}}>Modifier</a>
                    </td>

                    <td>{{ include('vinyl/_delete_form.html.twig') }}</td>
                </tr>

            {% endfor %}


        </tbody>
    </table>
</div>{% endblock %}
